<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorServerApplication</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/CodTestPage" Match="NavLinkMatch.All">
                <span class="oi oi-terminal" aria-hidden="true"></span> CodTestPage
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/employeelist" Match="NavLinkMatch.All">
                <span class="oi oi-tablet" aria-hidden="true"></span> Employee List
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/addemployee" Match="NavLinkMatch.All">
                <span class="oi oi-tablet" aria-hidden="true"></span> Add New Employee
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/departments" Match="NavLinkMatch.All">
                <span class="oi oi-tablet" aria-hidden="true"></span> All Departments
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
